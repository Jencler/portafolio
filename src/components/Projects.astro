---
import NextJS from "./icons/Next.astro";
import Tailwind from "./icons/Tailwind.astro";
import PostgresSQL from "./icons/PostgreSQL.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icons: NextJS,
  },
  POSTGRESQL: {
    name: "PostgreSQL",
    class: "bg-blue-400/40 text-white",
    icons: PostgresSQL,
  },
};

const PROJECTS = [
  {
    title: "Doobril",
    description:
      "Agencia de diseño y desarrollo web brindando servicios y soluciones de Páginas web, Landing page, Desarrollo web, Tiendas Online, Branding, Packaging...",
    link: "https://doobril.com",
    github: "https://github.com/themesberg/flowbite",
    image: "/doobril.webp",
    tags: [TAGS.NEXT, TAGS.POSTGRESQL],
  },
  {
    title: "Doobril Shop",
    description:
      "Ecommerce , una plataforma de comercio electrónico (Tienda online) para que nuestros clientes y personal de trabajo pueda aquirir los productos de la agencia e impulsar el crecimiento.",
    link: "https://shop.doobril.com",
    github: "https://github.com/tailwindlabs/tailwindcss",
    image: "/store.webp",
    tags: [TAGS.NEXT, TAGS.POSTGRESQL],
  },
];
---

<div class="w-full grid grid-cols-1 sm:grid-cols-2 gap-6">
  {
    PROJECTS.map((project) => (
      <artible class="h-auto max-w-full rounded-lg">
        <img src={project.image} alt={project.title} class="rounded-lg" />
        <ul class="flex gap-x-4 flex-row mt-4">
          {project.tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
              >
                {<tag.icons class="size-4" />} {tag.name}
              </span>
            </li>
          ))}
        </ul>

        <h3 class="text-semibold text-lg font-semibold text-purple-300/80 py-2">
          {project.title}
        </h3>
        <p class="mb-4 text-base font-normal text-gray-100/80">
          {project.description}
        </p>
        <a
          class="flex border rounded-lg items-center gap-2 text-white border-white/10 px-4 py-2 justify-center bg-white/5 transition hover:bg-white/10 hover:scale-105 w-fit"
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
        >
          Ir a la web
        </a>
      </artible>
    ))
  }
</div>
