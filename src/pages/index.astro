    <SectionContainer id="projects">
      <h2
        class="font-semibold text-2xl text-white flex gap-x-3 pt-8 items-center mb-6"
      >
        <CodeIcon class="size-8" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer id="skills" class="py-12">
      <Skills />
    </SectionContainer>
  </main>
