---
import Experience from "../components/Experience.astro";
import Hero from "../components/Hero.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Portafolio de Jencler - Desarrollador Web y Programador Web con 4 años de experiencia"
  description="Contrata a jencler para desarrollar tu sitio web o aplicación web."
>
  <main>
    <SectionContainer id="home" class="py-32 pb-24">
      <Hero />
    </SectionContainer>
    
    <SectionContainer id="experience" >
      <h2 class="font-semibold text-2xl text-white flex gap-x-3 pt-8 items-center mb-6">
        <Briefcase class="size-8"/>
        Experiencia laboral</h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects" >
      <h2 class="font-semibold text-2xl text-white flex gap-x-3 pt-8 items-center mb-6">
        <CodeIcon class="size-8"/>
        Proyectos</h2>
      <Projects>
    </SectionContainer>
  </main>
</Layout>
